#include <stdio.h>
#include <stdlib.h>

struct node {
	struct node *next;
	int vertex;
};

typedef struct node *GNODE;
GNODE graph[21];
void print(int *N) {
	int i;
	GNODE temp;
	for (i = 1; i <= *N; i++) {
		if (graph[i] != NULL) {
			printf("%d=>", i);
			temp = graph[i];
			while (temp != NULL) {
				printf("%d	", temp->vertex);
				temp = temp->next;
			}
			printf("\n");
		}
	}
}

// Insert a new vertex
void insertVertex(int *N) {
	if (*N >= 20) {
		printf("Maximum number of vertices reached.\n");
		return;
	}
	(*N)++;
	graph[*N] = NULL;
	printf("Vertex %d inserted.\n", *N);
	print(N);
}
